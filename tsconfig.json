{
  "compilerOptions": {
    "target": "ES2020", // O una versión más reciente de ECMAScript
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true // Útil si importas archivos JSON
  
  },

  "paths": {
      "@shared/*": ["../../shared/src/*"] // Navega dos niveles arriba para llegar a shared/
    },
  "baseUrl": "./src", // Para resolver rutas relativas dentro de src
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}